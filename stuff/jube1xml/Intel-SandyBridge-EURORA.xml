		 n2             = "$N2"
		 n3             = "$N3"/>

    <tasks       threadspertask = "2"
                 taskspernode   = "8"
                 nodes          = "6" />

    <params      descript         = "Setup: Small Hybrid"
                 optflagsmic      = "-mmic -openmp -O3 -r8"
                 ldoptflagsmic    = "-mmic -mkl=parallel -liomp5"
