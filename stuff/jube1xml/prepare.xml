<preparation>

<!-- ******************************************************************************** -->

<prepare cname="small">

  <input files="inputs/small/bou.in.in inputs/small/sonda.in inputs/small/nfbou" />
  <substitute infile="bou.in.in" outfile="bou.in">
    <sub from="#N1#"     to="$N1"/>
    <sub from="#N2#"     to="$N2"/>
    <sub from="#N3#"     to="$N3"/>
    <sub from="#NTST#"   to="$NTST"/>
    <sub from="#NSON#"   to="$NSON"/>
  </substitute>

  <command>(ln -s $benchhome/reference/small/boute-reference.out $outdir/boute-reference.out;
            ln -s $benchhome/reference/small/nusse-reference.out $outdir/nusse-reference.out)</command>

</prepare>

