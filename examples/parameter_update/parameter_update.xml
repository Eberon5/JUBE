<?xml version="1.0" encoding="UTF-8"?>
<jube>
  <benchmark name="parameter_updates" outpath="bench_run">
    <comment>A parameter_dependencies example</comment>

    <!-- Configuration -->
    <parameterset name="foo_never">
      <parameter name="bar_never" mode="text" update_mode="never">iter_never: $jube_wp_id</parameter>
    </parameterset>
       
    <parameterset name="foo_use">
      <parameter name="bar_use" mode="text" update_mode="use">iter_use: $jube_wp_id</parameter>
    </parameterset>

    <parameterset name="foo_step">
      <parameter name="bar_step" mode="text" update_mode="step">iter_step: $jube_wp_id</parameter>
    </parameterset>

    <!-- Operation -->
    <step name="step1">
      <use>foo_never,foo_use,foo_step</use>
      <do>echo $bar_never</do>
      <do>echo $bar_use</do>
      <do>echo $bar_step</do>
    </step>
 
    <step name="step2" depend="step1">
      <use>foo_never,foo_use,foo_step</use>
      <do>echo $bar_never</do>
      <do>echo $bar_use</do>
      <do>echo $bar_step</do>
    </step>

    <step name="step3" depend="step2">
      <do>echo $bar_never</do>
      <do>echo $bar_use</do>
      <do>echo $bar_step</do>
    </step>
  </benchmark>
</jube>
